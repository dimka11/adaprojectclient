<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" android:id="@+id/scrollView3">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/scrollView2">
        </ScrollView>
        <FrameLayout
                android:layout_width="420dp"
                android:layout_height="260dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/frameLayOut"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonSayHello">

            <fragment
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:name="com.ds.da.accelerationdata.RealtimeUpdatesFragment"
                    android:id="@+id/fragment"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    tools:layout="@layout/fragment_realtime_updates"/>
        </FrameLayout>
        <TextView
                android:text="@string/label_acceleration"
                android:layout_width="363dp"
                android:layout_height="27dp"
                android:id="@+id/label_acceleration"
                android:textSize="18sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
        />
        <Button
                android:text="write file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
                android:id="@+id/buttonWriteFile"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/label_acceleration"/>
        <Button
                android:text="network stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNetworkStream"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/label_acceleration" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"/>
        <TextView
                android:text="URL (server):"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonWriteFile" android:id="@+id/textViewURL"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:text="http://192.168.1.3:8080/putData"
                android:ems="10"
                android:id="@+id/editTextURL"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/buttonNetworkStream"
                android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>
        <Spinner
                android:layout_width="169dp"
                android:layout_height="23dp"
                android:entries="@array/updateRates"
                android:id="@+id/spinnerUpdateRate" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextURL"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewUpdateRateLabel" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/spinnerUpdateRate" android:layout_marginEnd="8dp"
                android:text="Update rate: "
                android:entries="@array/updateRates"
                app:layout_constraintHorizontal_bias="0.065" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewURL"/>
        <CheckBox
                android:text="Write timestamp"
                android:layout_width="162dp"
                android:layout_height="36dp"
                android:id="@+id/checkBoxTimeStamp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerUpdateRate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <CheckBox
                android:text="Write label"
                android:layout_width="163dp"
                android:layout_height="35dp"
                android:id="@+id/checkBoxLabel" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/checkBoxTimeStamp"/>
        <Switch
                android:text="ShowGraph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/switchShowGraph" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/checkBoxLabel"
                android:checked="true"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:inputType="textPersonName"
                android:text="Test"
                android:ems="10"
                android:id="@+id/editTextWriteLabel"
                android:layout_marginTop="44dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerUpdateRate" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/checkBoxLabel"/>
        <TextView
                android:text=" "
                android:layout_width="41dp"
                android:layout_height="22dp"
                android:id="@+id/textViewUpdRateLabel" app:layout_constraintStart_toEndOf="@+id/textViewUpdateRateLabel"
                android:layout_marginStart="8dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextURL"
        />
        <Switch
                android:text="Use service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/switchUseService"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxLabel"/>
        <Button
                android:text="bind"
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:id="@+id/buttonBindService"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/switchUseService" android:textSize="12sp"
        />
        <Button
                android:text="Hi"
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:id="@+id/buttonSayHello"
                android:textSize="12sp" app:layout_constraintStart_toEndOf="@+id/buttonDimDisplay"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/switchShowGraph" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/buttonBindService"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewAccelerometer" app:layout_constraintStart_toEndOf="@+id/checkBoxTimeStamp"
                android:layout_marginStart="12dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerUpdateRate" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="Dim"
                android:layout_width="90dp"
                android:layout_height="32dp" android:id="@+id/buttonDimDisplay"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/switchShowGraph"
                android:textSize="12sp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>