<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Start SW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStart" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Stop SW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStop" app:layout_constraintStart_toEndOf="@+id/buttonStart"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/textViewSW" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/buttonStop"
            android:layout_marginStart="8dp" android:textSize="24sp"/>
    <Button
            android:text="WakeLock ON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonWLStart" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonStart"/>
    <Button
            android:text="Wakelock OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonWLStop" app:layout_constraintStart_toEndOf="@+id/buttonWLStart"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonStop"/>
    <Button
            android:text="Service start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/buttonFGSStart"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonWLStart"/>
    <Button
            android:text="Service stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFGServiceStop" app:layout_constraintStart_toEndOf="@+id/buttonFGSStart"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonWLStop" android:textAllCaps="true"/>
    <Button
            android:text="SAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSAF" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonFGSStart"/>
    <Button
            android:text="Retrofit"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRetrofit" app:layout_constraintStart_toEndOf="@+id/buttonSAF"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonFGServiceStop"/>
    <TextView
            android:layout_width="343dp"
            android:layout_height="112dp"
            android:scrollbars="vertical"
            android:id="@+id/textViewRetrofit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonSAF"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Acceleration:"
            android:layout_width="309dp"
            android:layout_height="22dp"
            android:id="@+id/TextViewAccelerometer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewRetrofit"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Bind service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBindService" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/TextViewAccelerometer"/>
    <Button
            android:text="SayHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSayHello" app:layout_constraintStart_toEndOf="@+id/btnBindService"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/TextViewAccelerometer"/>
</android.support.constraint.ConstraintLayout>